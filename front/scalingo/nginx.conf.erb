location / {
  root /app/dist;
  try_files $uri /index.html;
}

location ~* \.(?:woff|woff2)$ {
  expires 1y;
  access_log off;
  add_header Access-Control-Allow-Origin "aide.immersion-facile.beta.gouv.fr";
}

location /api {
  rewrite /api/(.*) /$1 break;
  proxy_pass https://<%= ENV['APP'].gsub("front", "back") %>.<%= ENV['REGION_NAME'] %>.scalingo.io;
}
